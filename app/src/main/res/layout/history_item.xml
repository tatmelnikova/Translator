<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/historyListItem"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

    <TextView
        android:id="@+id/textViewText"
        style="@style/historyTextFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_toLeftOf="@+id/textViewDirection"
        android:layout_toStartOf="@+id/textViewDirection"
    />


       <TextView
           android:id="@+id/textViewResult"
           style="@style/historyTextTo"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:layout_below="@+id/textViewText"
           android:layout_toLeftOf="@+id/textViewDirection"
           android:layout_toStartOf="@+id/textViewDirection"
           />

       <TextView
           android:id="@+id/textViewDirection"
           style="@style/historyTextDirection"
           android:layout_height="match_parent"
           android:layout_toLeftOf="@+id/imageViewFav"
           android:layout_toStartOf="@+id/imageViewFav"/>

    <ImageView
        android:id="@+id/imageViewFav"
        android:layout_width="@dimen/fav_icon_width"
        android:layout_height="@dimen/fav_icon_height"
        android:padding="@dimen/fav_icon_padding"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/fav_icon_title"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/ic_favorite_white_24dp"/>

   </RelativeLayout>