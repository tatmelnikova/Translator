<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/editTextDefault</item>
        <item name="android:textViewStyle">@style/textViewDefault</item>
    </style>
    <style name="editTextDefault" parent="@android:style/Widget.EditText">
        <item name="background">@drawable/edit_text_selector</item>
        <item name="android:padding">@dimen/inner_block_padding</item>
        <item name="android:gravity">top</item>
    </style>
    <style name="textViewDefault" parent="@android:style/Widget.TextView">
        <item name="android:padding">@dimen/inner_block_padding</item>
    </style>
    <style name="contentWrapper">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>
    <style name="header">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="changeLangButton">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/textInverseColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/large_font_size</item>
    </style>

    <!-- история -->
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabSelectedTextColor">@color/textInverseColor</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabTextColor">@color/textInverseColor</item>
    </style>

    <style name="historySearchView" parent="Base.Widget.AppCompat.SearchView">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="queryBackground">@null</item>
        <item name="android:background">@drawable/searchview_bg</item>
    </style>
    <style name="historyListItem">
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>
    <style name="historyTextFrom">
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginRight">@dimen/inner_block_padding</item>
        <item name="android:textColor">@color/textMainColor</item>
    </style>
    <style name="historyTextTo">
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginRight">@dimen/inner_block_padding</item>
        <item name="android:textColor">@color/textSubColor</item>
    </style>
    <style name="historyTextDirection">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/direction_col_width</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>
